@{
    Layout = ViewBag.Layout;
}

<h2>Perfil Usuario</h2>

<form method="post" action="~/Configuracoes/AlterarDados" enctype="multipart/form-data">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="crm">ID:</label>
            <input class="form-control" id="crm" type="text" name="medico.crm" value="@ViewBag.ID" readonly />
        </div>

        <div class="form-group col-md-6">
            <label for="nome">Nome:</label>
            <input class="form-control" style="text-transform:uppercase" id="nome" type="text" name="nome" value="@ViewBag.Nome" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Data">Data:</label>
            <input class="form-control" id="dt_nasc" type="text" name="data" required value="@ViewBag.Dt_Nasc" />
        </div>

        <div class="form-group col-md-6">
            <label for="Data">Tipo:</label>
            <input class="form-control" id="dt_nasc" type="text" name="medico.id_funcionario" required value="@ViewBag.Tipo" readonly />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-sm btn-success form-control">Salvar</button>
        </div>
        <div class="form-group col-md-3">
            <button type="button" class="btn btn-sm btn-primary form-control" onclick="location.href='@Url.Action("AlterarSenha", "Configuracoes")'">Alterar Senha</button>
        </div>
        <div class="form-group col-md-3">
            <a href="javascript:window.history.go(-1)" class="form-control btn btn-sm btn-danger ml-md-2">Voltar</a>
        </div>
    </div>
</form>

