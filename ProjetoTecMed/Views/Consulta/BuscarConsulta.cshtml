@{
    Layout = ViewBag.Layout;
}

<h2>Buscar Consulta</h2>

<form method="post" action="~/Consulta/RealizaBusca" enctype="multipart/form-data">

    <div class="form-row">
        <div class="input-group col-md-6">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input type="radio" name="check" value="crm"> Pesquisar por CRM
                </div>
            </div>
  
        </div>
        <div class="input-group col-md-6">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input type="radio" name="check" value="cpf"> Pesquisar por CPF

                </div>
            </div>
        </div>
        <div class="input-group col-md-6">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input type="radio" name="check" value="data"> Pesquisar por Data

                </div>
            </div>      
        </div>
        <div class="input-group col-md-6">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input type="radio" name="check" value="status"> Pesquisar por Status
                </div>
            </div>   
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="crm">CRM:</label>
            <input class="form-control" id="crm" type="text" name="crm" />
        </div>

        <div class="form-group col-md-6">
            <label for="cpf">CPF:</label>
            <input class="form-control" id="cpf" type="text" name="cpf" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="tipo">Tipo:</label>
            <select class="form-control" name="tipo" id="tipo">
                @foreach (var tipos in ViewBag.ListaTipos)
                {
                    <option value="@tipos">@tipos</option>
                }
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="status">Status:</label>
            <select class="form-control" name="status" id="status">
                @foreach (var status in ViewBag.ListaStatus)
                {
                    <option value="@status">@status</option>
                }
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="data">Data:</label>
            <input class="form-control" id="crm" type="date" name="data" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-sm btn-success form-control">Buscar</button>
        </div>
        <div class="form-group col-md-3">
            <a href="javascript:window.history.go(-1)" class="btn btn-sm btn-danger ml-md-2 form-control">Voltar</a>
        </div>
    </div>

</form>

