@{
    Layout = null;
}

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/estilos.css">
    <link rel="stylesheet" href="~/css/bootstrap/LoginCSS.css" />

</head>
<body>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-heading">
                <div class="imagem-login" style="margin-left:auto; margin-right:auto; align-items:center; justify-content: center; display:flex;">
                    <img src="~/images/logo2.PNG" class="img-fluid" style="width:400px; margin-right: auto; margin-left: auto; margin-bottom:10px; margin-top:10px;"/>
                </div>   
                <h2 class="text-center">Autenticação</h2>
            </div>
  
            <div class="modal-body">
                <form role="form" method="post" action="~/Login/EfetuarLogin">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </span>
                            <input type="text" class="form-control" name="login" placeholder="User Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-lock"></span>
                            </span>
                            <input type="password" class="form-control" name="senha" placeholder="Password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-text">
                                <input type="radio" checked="checked" name="check" value="funcionario"> Funcionario
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="input-group-text">
                                <input type="radio" name="check" value="paciente"> Paciente
                            </div>
                        </div>
                    </div>

                    <div class="forgot">
                        <a asp-controller="Login" asp-action="FormEsqueceuSenha">Esqueceu a Senha?</a>
                    </div>
                    <span style="color:red;">@ViewBag.Erro</span>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success btn-lg">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</body>

</html>


