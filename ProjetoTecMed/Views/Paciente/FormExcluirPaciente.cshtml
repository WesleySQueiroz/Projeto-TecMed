@{
    Layout = ViewBag.Layout;
}

<h2>Excluir Paciente</h2>

<form method="post" action="~/Paciente/ExcluirPaciente">

    <span style="color:red">@ViewBag.Mensagem</span>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="cpf">CPF:</label>
            <input class="form-control form-control-sm" id="cpf" type="text" name="cpf" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-sm btn-warning form-control">Excluir</button>
        </div>
        <div class="form-group col-md-3">
            <a href="javascript:window.history.go(-1)" class="btn btn-sm btn-danger ml-md-2 form-control">Voltar</a>
        </div>
    </div>

</form>

