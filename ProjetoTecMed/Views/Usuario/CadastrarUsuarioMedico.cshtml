@{
    Layout = ViewBag.Layout;
}

<h2>Cadastrar Usuario</h2>

<form method="post" action="~/Usuario/AdicionaUsuarioMedico" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="nome">Nome:</label>
            <input class="form-control" id="nome" maxlength="50" type="text" name="usuario.nome" />
        </div>

        <div class="form-group col-md-6">
            <label for="dt_nasc">Data de Nascimento:</label>
            <input class="form-control" type="date" name="usuario.dt_nasc" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="login">Login:</label>
            <input class="form-control" type="text" name="usuario.login" />
        </div>

        <div class="form-group col-md-6">
            <label for="senha">Senha:</label>
            <input class="form-control" type="password" name="usuario.senha" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="senha">Tipo:</label>
            <input class="form-control" type="text" value="@ViewBag.Tipo" name="usuario.tipo" readonly />
        </div>

        <div class="form-group col-md-6">
            <label for="senha">CRM:</label>
            <input class="form-control" type="number" value="@ViewBag.Tipo" name="crm" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="especialidade">Especialidade:</label>
            <input class="form-control" type="text" maxlength="20" value="@ViewBag.Tipo" name="especialidade" />
        </div>

    </div>


    <div class="form-row">
        <div class="form-group col-md-6">
            <button type="submit" class="form-control btn btn-sm btn-dark ">Cadastrar</button>
        </div>
        <div class="form-group col-md-6">
            <a href="javascript:window.history.go(-1)" class="btn btn-sm btn-danger ml-md-2 form-control">Voltar</a>
        </div>

    </div>



</form>