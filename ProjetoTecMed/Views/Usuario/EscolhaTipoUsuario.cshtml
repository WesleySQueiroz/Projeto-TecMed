@{
    Layout = ViewBag.Layout;
}

<h2>Cadastro de Usuario</h2>

<form method="post" action="~/Usuario/CadastraUsuario" enctype="multipart/form-data">
    <span style="color:red">@ViewBag.Mensagem</span>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="tipo">Tipo:</label>
            <select class="form-control" name="tipo">
                <option value="Medico">Medico</option>
                <option value="Atendente">Atendente</option>
                <option value="Administrador">Administrador</option>
            </select>
        </div>
    </div>

    <div class="form-row">

        <div class="form-group col-md-6">
            <button type="submit" class="form-control btn btn-sm btn-dark ">Cadastrar</button>
        </div>

        <div class="form-group col-md-6">
            <a href="javascript:window.history.go(-1)" class="btn btn-sm btn-danger ml-md-2 form-control">Voltar</a>
        </div>

    </div>


</form>

